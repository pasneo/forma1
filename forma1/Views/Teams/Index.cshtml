@model IEnumerable<forma1.Models.Team>
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Teams";
    bool IsSignedIn = SignInManager.IsSignedIn(User);
}

<h2>Teams</h2>

<p>
    @if (IsSignedIn)
    {
        <a asp-action="Create">Create team</a>
    }
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearFounded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorldChampionshipsWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaidEntryFee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearFounded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorldChampionshipsWon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaidEntryFee)
                </td>
                @if (IsSignedIn) {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>